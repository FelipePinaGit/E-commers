generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Venta {
  id          Int            @id @default(autoincrement())
  fecha       DateTime
  descuento   Float
  montoFinal  Float
  clienteId   String
  estado      String         @default("activa") // ðŸ‘ˆ activa | anulada

  detalles    DetalleVenta[]
}

model DetalleVenta {
  id          Int      @id @default(autoincrement())
  ventaId     Int
  productoId  Int
  precio      Float
  cantidad    Int
  subtotal    Float

  venta       Venta    @relation(fields: [ventaId], references: [id])
}
